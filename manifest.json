{
  "manifest_version": 2,
  "name": "Allociné Chrome Filter",
  "description": "Permet de cacher les films sans séances aujourd'hui sur le site d'allociné",
  "version": "1.0",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "img/allocine_logo19.png",
      "38": "img/allocine_logo38.png"
    }
  },
  "permissions": [
    "tabs",
    "*://www.allocine.fr/seance/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.allocine.fr/seance/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
